filters:
  and:
    - "!formula.fimage.isEmpty()"
formulas:
  fimage: image(if(cover,cover,icon))
views:
  - type: cards
    name: Cards/categories
    groupBy:
      property: categories
      direction: ASC
    order:
      - ctime
    sort:
      - property: ctime
        direction: DESC
    image: formula.fimage
    imageAspectRatio: 0.6
    imageFit: contain
